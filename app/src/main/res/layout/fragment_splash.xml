<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbe0b"
    tools:context=".SplashFragment">

    <TextView
        android:id="@+id/txtBlink"
        android:layout_width="wrap_content"
        android:layout_height="91.00dp"
        android:text="blink-it"
        android:textColor="#000000"
        android:textSize="70.00sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTxtSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="India's last minute app"
        android:textSize="19.50sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/txtBlink"
        app:layout_constraintStart_toStartOf="@id/txtBlink"
        app:layout_constraintEnd_toEndOf="@id/txtBlink"/>

    <View
        android:id="@+id/lineView"
        android:layout_width="234dp"
        android:layout_height="2.60dp"
        android:background="#7B7777"
        android:layout_weight="3"
        android:layout_margin="26dp"
        app:layout_constraintStart_toStartOf="@id/txtBlink"
        app:layout_constraintEnd_toEndOf="@id/txtBlink"
        app:layout_constraintTop_toBottomOf="@id/subTxtSplash"/>

    <TextView
        android:id="@+id/txtBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A ZOMATO COMPANY"
        android:textSize="11sp"
        android:layout_margin="26dp"
        android:textColor="#000000"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toBottomOf="@id/lineView"
        app:layout_constraintStart_toStartOf="@id/txtBlink"
        app:layout_constraintEnd_toEndOf="@id/txtBlink"/>

</androidx.constraintlayout.widget.ConstraintLayout>